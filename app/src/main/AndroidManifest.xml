<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.platform">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Platform">
        <activity android:name=".activities.SearchActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.EpisodeDetailsActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.MovieTitleDetailsActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.TvTitleDetailsActivity" />
        <activity android:name=".activities.BaseActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.SignupActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>