<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileGeneralActivity"
    android:background="@color/black_lighter">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_ProfileGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="start"
        android:minHeight="?attr/actionBarSize"
        app:titleMargin="4dp"
        app:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/ivBack_ProfileGeneral"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tvHeading_ProfileGeneral"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="General"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rlProfileGeneralContainer"
        android:layout_below="@+id/toolbar_ProfileGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:id="@+id/rlProfileGeneral_Fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/black_light">
            <TextView
                android:id="@+id/tvProfileGeneral_Fullname_Text"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/btnProfileGeneral_Fullname_Change"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:scrollHorizontally="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_height="wrap_content"
                android:text="Fullname"
                android:textColor="@color/white_dimmer" />
            <Button
                android:id="@+id/btnProfileGeneral_Fullname_Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Change"
                android:textSize="12sp"
                android:padding="0dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProfileGeneral_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rlProfileGeneral_Fullname"
            android:background="@color/black_light" >
            <TextView
                android:id="@+id/tvProfileGeneral_Username_Text"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/btnProfileGeneral_Username_Change"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:scrollHorizontally="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/white_dimmer"/>
            <Button
                android:id="@+id/btnProfileGeneral_Username_Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Change"
                android:textSize="12sp"
                android:padding="0dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProfileGeneral_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rlProfileGeneral_Username"
            android:background="@color/black_light" >
            <TextView
                android:id="@+id/tvProfileGeneral_Email_Text"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/btnProfileGeneral_Email_Change"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:scrollHorizontally="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white_dimmer"/>
            <Button
                android:id="@+id/btnProfileGeneral_Email_Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Change"
                android:textSize="12sp"
                android:padding="0dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlProfileGeneral_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rlProfileGeneral_Email"
            android:background="@color/black_light" >
            <TextView
                android:id="@+id/tvProfileGeneral_Password_Heading"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="@color/white_dimmer"/>
            <TextView
                android:id="@+id/tvProfileGeneral_Password_Text"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/tvProfileGeneral_Password_Heading"
                android:layout_toLeftOf="@+id/btnProfileGeneral_Password_Change"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:scrollHorizontally="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:textSize="18sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content"
                android:text="userPassword@123"
                android:inputType="textPassword"
                android:textColor="@color/white_dimmer"/>
            <Button
                android:id="@+id/btnProfileGeneral_Password_Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Change"
                android:textSize="12sp"
                android:padding="0dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>