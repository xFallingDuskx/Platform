<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CatalogFragment_RecentTitles"
    android:background="@color/black_light">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecentTitles"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrameLayout_Catalog_Recent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/layoutPlaceHolderOne_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder" />
                <include
                    android:id="@+id/layoutPlaceHolderTwo_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_toRightOf="@+id/layoutPlaceHolderOne_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderThree_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderOne_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderFour_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderTwo_Recent"
                    android:layout_toRightOf="@+id/layoutPlaceHolderThree_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderFive_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderThree_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderSix_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderFour_Recent"
                    android:layout_toRightOf="@+id/layoutPlaceHolderFive_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderSeven_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderFive_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderEight_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderSix_Recent"
                    android:layout_toRightOf="@+id/layoutPlaceHolderSeven_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderNine_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderSeven_Recent"/>
                <include
                    android:id="@+id/layoutPlaceHolderTen_Recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/item_title_simple_shimmer_placeholder"
                    android:layout_below="@+id/layoutPlaceHolderEight_Recent"
                    android:layout_toRightOf="@+id/layoutPlaceHolderNine_Recent"/>

            </RelativeLayout>

        </ScrollView>

    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>