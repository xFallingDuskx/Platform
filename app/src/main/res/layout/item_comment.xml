<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_light"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_profile"/>

    <TextView
        android:id="@+id/tvUsername_Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Username" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tvUsername_Comment"
        android:textColor="@color/grey_light"
        android:textSize="16sp"
        tools:text="Timestamp" />

    <TextView
        android:id="@+id/tvCommentText_Comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername_Comment"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:textColor="@color/whiteOpacit"
        android:textSize="16sp"
        android:linksClickable="true"
        tools:text="Comment from user - Lorem ipsum dolor sit amet, veritus adolescens temporibus ad cum, ad qui tractatos reprehendunt. Usu ut ullum iracundia, agam interesset ea nam." />

    <ImageView
        android:id="@+id/ivLike_Comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvCommentText_Comment"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivReplyTo"
        android:src="@drawable/ic_heart_empty" />

    <TextView
        android:id="@+id/tvLikes_Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCommentText_Comment"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivLike_Comment"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="150" />

    <ImageView
        android:id="@+id/ivReplies_Comments"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvCommentText_Comment"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivLike_Comment"
        android:src="@drawable/ic_comment" />

    <TextView
        android:id="@+id/tvReplies_Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCommentText_Comment"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ivReplies_Comments"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="20" />

    <ImageView
        android:id="@+id/ivReplyTo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvCommentText_Comment"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivProfilePicture"
        android:src="@drawable/ic_share_1" />
</RelativeLayout>