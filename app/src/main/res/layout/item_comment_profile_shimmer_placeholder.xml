<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_lighter"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/ivTitleCover_ProfileComment"
        android:background="@color/grey_light"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvUsername_ProfileComment"
        android:background="@color/grey_light"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivTitleCover_ProfileComment"
        android:textColor="@color/grey_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Username" />

    <TextView
        android:id="@+id/tvCommentText_ProfileComment"
        android:background="@color/grey_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsername_ProfileComment"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/ivTitleCover_ProfileComment"
        android:ellipsize="end"
        android:minLines="4"
        android:scrollHorizontally="true" />

</RelativeLayout>